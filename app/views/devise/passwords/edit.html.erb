<h2 class="text-center">Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

 
    <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: 'Enter New Password' %>
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true, label: false, placeholder: 'Confirm your new password' %>
 
    <%= f.button :submit, "Change my password", class: 'btn btn-sucess btn-block' %>
  
<% end %>

<%= render "devise/shared/links" %>
