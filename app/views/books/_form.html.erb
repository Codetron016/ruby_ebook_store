<%= simple_form_for(@book, html: {class: 'form-signin' }) do |f| %>
  <%= f.error_notification %>


    <%= f.input :name, required: true, label: false, placeholder: 'Enter Book Name' %>
    <%= f.input :author, required: true, label: false, placeholder: 'Enter Author Name' %>
    <%= f.input :description, required: true, label: false, placeholder: 'Enter Book Description' %>
    <%= f.input :price, required: true, label: false, placeholder: 'Enter Book Price' %>
    <%= f.input :availability %>

    <%= f.button :submit, class: 'btn btn-primary btn-block' %>
 
<% end %>
